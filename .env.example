# Configuration Flirit Docker
# Copiez ce fichier vers .env et modifiez les valeurs

# PostgreSQL
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=postgres
POSTGRES_USER=postgres

# Hasura
HASURA_GRAPHQL_ADMIN_SECRET=your_admin_secret_here
HASURA_GRAPHQL_JWT_SECRET_TYPE=RS256
HASURA_GRAPHQL_JWT_SECRET_JWK_URL=https://www.googleapis.com/service_accounts/v1/jwk/securetoken@system.gserviceaccount.com
HASURA_GRAPHQL_JWT_SECRET_ISSUER=https://securetoken.google.com/your-firebase-project-id

# Sauvegarde
BACKUP_RETENTION_DAYS=7

# Environnement
ENVIRONMENT=development